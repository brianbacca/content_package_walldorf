<mvc:View   xmlns:core="sap.ui.core"
            xmlns:html="http://www.w3.org/1999/xhtml"
            width="100%"
            displayBlock="true"
            controllerName="wall.CardBanner.Card"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc"
            xmlns:f="sap.ui.layout.form">
        <FlexBox class="marginNegativo">
            <Carousel
                id="carouselSample"
                arrowsPlacement="Content"
                loop="true"
                pageChanged="onNextPage"
                showPageIndicator="false"
                pages="{path: 'banners>/'}"
                >
                     <VBox width="100%" justifyContent="Center" alignItems="Stretch">
                <Image width="100%" class="customBannerImage" src="{banners>imagenNoticia}" id="idBannerImg" />
                    </VBox>

            </Carousel>
        </FlexBox>
</mvc:View>
